{
    "name": "juvo/wp-secure-actions",
    "description": "Framework to securely handle verifiable actions in wordpress",
    "keywords"    : [ "wordpress", "actions"],
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=7.2.0"
    },
    "support"     : {
        "issues" : "https://github.com/JUVOJustin/wp-secure-actions/issues"
    },
    "authors": [
        {
            "name": "Justin Vogt",
            "email": "mail@juvo-design.de",
            "homepage": "https://juvo-design.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "juvo\\WordPressSecureActions\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10.6",
        "szepeviktor/phpstan-wordpress": "^v1.1.7",
        "phpstan/extension-installer": "^1.1"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
